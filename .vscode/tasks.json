{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build CellularManager",
            "type": "shell",
            "command": "g++ -Wall -std=c++14 `pkg-config --cflags dbus-1` -I/usr/include/dbus-c++-1 ${workspaceFolder}/*.cpp -o ${workspaceFolder}/modem_managed -ldbus-c++-1 `pkg-config --libs dbus-1`",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "shell": {
                    "executable": "bash",
                    "args": ["-c"]
                }
            }
        }
    ]
}